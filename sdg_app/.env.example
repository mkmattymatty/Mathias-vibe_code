# Copy this to .env and fill values
FLASK_SECRET_KEY=change-me
# MySQL connection string examples:
# mysql+pymysql://user:password@localhost:3306/sdg_app
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/sdg_app

# Hugging Face Inference API token (for question generation + sentiment)
HF_API_TOKEN=hf_your_token_here

# Question generation model (change if you like)
HF_QG_MODEL=iarfmoose/t5-base-question-generator

# Sentiment model
HF_SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english

# OpenAI (or compatible) API key for recipe suggestions
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini
